<h1 class="text-center"> Task List: <%= best_in_place @list, :title, :as => :input %> </h1>


<div class="col-md-push-2 col-md-8">
<h3>  Add task </h3>

<%= bootstrap_form_for [@task], layout: :inline, :html => { multipart: true }  do |f| %>
<%= f.text_field :title, placeholder: "task" %>
<%= f.text_field :description, placeholder: "description" %>
<%= f.date_field :due_date, :class => "form-control input-lg", type: "date", value: "due date" %>
<%= f.hidden_field :list_id, value: @list.id %>
<%= f.submit "Submit", class: "btn btn-default btn-lg" %>
<% end %>

</div>

<h3> Completed tasks </h3>

<div class="data-table row text-center col-md-12">
  <table id="tasks" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th> Title </th>
        <th> Description </th>
        <th> Due Date </th>
        <th> Completed </th>
      </tr>
    </thead>
    <tbody>
    <% @list.tasks.each do |task| %>
      <tr>
        <td><%=task.title  %></td>
        <td><%=task.description %></td>
        <td><%=task.due_date.strftime("%m/%d/%Y at %I:%M%p")  %></td>
        <td><%= best_in_place task, :complete, :as => :select, :collection => {false: "Nope", true: "Yep"} %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
