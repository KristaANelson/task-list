<h2> Add a new list: </h2>

<%= bootstrap_form_for [@list],  :html => { multipart: true }  do |f| %>
<%= f.text_field :title, hide_label: true, placeholder: "title" %>
<%= f.submit "Submit", class: "btn btn-default btn-lg" %>
<% end %>

<h2> Active Lists </h2>
  <% @lists.active.each do |list| %>
      <%= link_to "#{list.title}", list_path(id: list.id ) %>
      <%= link_to "edit", edit_list_path(id: list.id ) %>
      <%= button_to "archive", archive_list_path(id: list.id ) %>
    <br>
  <% end %>

<h3> Archieved Lists </h3>
  <% @lists.archieved.each do |list| %>
      <%= link_to "#{list.title}", list_path(id: list.id ) %>
      <%= link_to "edit", edit_list_path(id: list.id ) %>
      <%= button_to "delete", {:controller => :lists,
      :action => 'destroy', :id => list.id }, :method => :delete %>
  <% end %>
